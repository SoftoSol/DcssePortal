@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Home</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Internal CSS-->
    <style>
        .img-wrapper {
            position: relative;
            width: 100%;
            height:200px;
            background-color:black;
        }

        .img-overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            text-align: center;
        }

         .img-overlay:before {
             content: ' ';
             display: block;
             /* adjust 'height' to position overlay content vertically */
             height: 33%;
         }
         .btn:hover {
             background-color: cornflowerblue;
         }
    </style>

</head>

<!--Body-->
<body>

    <div class="img-wrapper">
        <img class="img-responsive" style="width:100%; height:150px;" src="~/Images/headerpic.PNG">
        <div class="img-overlay">
            <a href="@Url.Action("Login","Account")" class="btn btn-md btn-success float-right p-1 mr-2" style="margin-top: -18px; font-weight:700; font-size:18px;" >Login</a>
        </div>
    </div>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/IIUIslider01.PNG" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/IIUIslider02.PNG" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/IIUIslider03.PNG" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/IIUIslider04.PNG" alt="Forth slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/IIUIslider05.PNG" alt="Fifth slide">
            </div>
        </div>
    </div>

    <!--JS-->
    <script>
        $('.carousel').carousel({
            interval: 2000
        })
    </script>

</body>
</html>
