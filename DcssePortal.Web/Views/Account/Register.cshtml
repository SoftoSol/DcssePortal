@model DcssePortal.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = null;

}
<!DocTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>


    <style>
        body {
            background-color: #5F9DA1;
        }
    </style>

</head>
<body>


    <div class="container mt-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-10 col-md-8 col-lg-6">
                <h2>@ViewBag.Title.</h2>

                <h4>Create a new account.</h4>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter Email" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter Name" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.Label("User Role", new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @*@Html.DropDownList("Name")*@
                            @Html.DropDownListFor(x => x.UserRoles, new List<SelectListItem> { new SelectListItem { Text = "Admin", Value = "Admin" }, new SelectListItem { Text = "Faculty", Value = "Faculty" }, new SelectListItem { Text = "Student", Value = "Student" } }, "Select Role")
                        </div>
                    </div>
                    <div class="form-group form-row float-right">
                        <div class="col-md-offset col-md-12 mt-4">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


</body>
</html>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
