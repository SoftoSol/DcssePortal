@model IEnumerable<DcssePortal.Model.Result>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid mt-4" style="color: #566787; background: #f5f5f5; font-family: 'Varela Round', sans-serif; font-size: 15px;">

    <h2 class="pt-3">
        <b>Result</b> Management
    </h2>
    <a href="@Url.Action("Create New", "Create")" class="btn btn-success float-right mb-2">
        <i class="fas fa-plus-circle"></i>
        <span>
            <strong>Add New Result</strong>
        </span>
    </a>


    <table class="table table-bordered table-striped table-hover table-responsive-lg">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalMarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObtainedMarks)
            </th>
            <th>
                @Html.Label("Actions")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalMarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObtainedMarks)
                </td>
                <td>
                    <a href="@Url.Action("Create", "Results",new { id=item.ID} )" class=" " style="font-size:20px; color:lightseagreen; display:inline-block; margin-right:15px;" data-toggle="tooltip" title="Edit">
                        <i class="fas fa-pencil-alt"></i>
                        @*<span>
                                <strong>Edit</strong>
                            </span>*@
                    </a>
                    <a href="@Url.Action("Delete", "Results",new { id=item.ID} )" class=" " style="font-size:20px; color:red; display:inline-block; margin-right:15px;" data-toggle="tooltip" title="Delete">
                        <i class="fas fa-trash-alt"></i>
                        @*<span>
                                <strong>Delete</strong>
                            </span>*@
                    </a>
                    <a href="@Url.Action("Details", "Results",new { id=item.ID} )" class=" " style="font-size:20px; color:orange; display:inline-block; margin-right:15px;" data-toggle="tooltip" title="Detail">
                        <i class="fas fa-book"></i>
                        @*<span>
                                <strong>Detail</strong>
                            </span>*@
                    </a>
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>*@
            </tr>
        }

    </table>
</div>













