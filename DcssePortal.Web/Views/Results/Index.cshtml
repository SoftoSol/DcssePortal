@model IEnumerable<DcssePortal.Web.Models.CreateResultViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid mt-4" style="color: #566787; background: #f5f5f5; font-family: 'Varela Round', sans-serif; font-size: 15px;">

    <h2 class="pt-3">
        <b>Result</b> Management
    </h2>
    <a href="@Url.Action("Create","Results")" class="btn btn-success float-right mb-2">
        <i class="fas fa-plus-circle"></i>
        <span>
            <strong>Add New Result</strong>
        </span>
    </a>

    @if (Model.Count() > 0)
    {
    <table id="myTableName" class="table table-bordered table-striped table-hover table-responsive-lg">
        <thead>
            <tr>

                <th>
            @Html.DisplayNameFor(model => model.Student.RegNo)
        </th>
                <th>
                    @Html.DisplayNameFor(model => model.Enrollment.Student.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Enrollment.Student.LastName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Enrollment.Student.FatherName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Enrollment.Student.DOB)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Enrollment.Student.Batch)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.InternalMarks)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExternalMarks)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObtainedMarks)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalMarks)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
                <th>
                    @Html.Label("Actions")
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Enrollment.Student.RegNo)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Enrollment.Student.FirstName)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Enrollment.Student.LastName)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Enrollment.Student.FatherName)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Enrollment.Student.DOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Enrollment.Student.Batch)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InternalMarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExternalMarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObtainedMarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalMarks)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Grade)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ID })" class=" " style="font-size:20px; color:lightseagreen; display:inline-block; margin-right:15px;" data-toggle="tooltip" title="Edit">
                            <i class="fas fa-pencil-alt"></i>
                            @*<span>
                                    <strong>Edit</strong>
                                </span>*@
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ID })" class=" " style="font-size:20px; color:red; display:inline-block; margin-right:15px;" data-toggle="tooltip" title="Delete">
                            <i class="fas fa-trash-alt"></i>
                            @*<span>
                                    <strong>Delete</strong>
                                </span>*@
                        </a>
                        <a href="@Url.Action("Details", new { id = item.ID })" class=" " style="font-size:20px; color:orange; display:inline-block; margin-right:15px;" data-toggle="tooltip" title="Detail">
                            <i class="fas fa-book"></i>
                            @*<span>
                                    <strong>Detail</strong>
                                </span>*@
                        </a>
                    </td>                 
                </tr>
            }
        </tbody>

    </table>
    }</div>

<script>
    $(document).ready(function () {
        $('#myTableName').DataTable();
    });
</script>