@model DcssePortal.Web.Models.ResultViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <h3>Create Result</h3>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    @*<div class="form-group form-row mt-3 mb-1">
                            @Html.LabelFor(x => Model.Student, htmlAttributes: new { @class = "control-label ml-2" })
                            <div class="col-md-5">

                                @Html.ValidationMessageFor(x => x.SelectedCountryIso3, "", new { @class = "text-danger" })
                            </div>
                        </div>*@

                    @*Select Course*@
                    <div class="form-group form-row mt-3 mb-1">
                        <label for="inputState" class="ml-2">Course:</label>
                        @*<select id="inputState" class="form-control">
                                <option selected>Select Course</option>
                                <option>...</option>
                            </select>*@
                        <div class="col-md-12">
                            @Html.DropDownListFor(x => Model.Course, new SelectList(ViewBag.Courses, "ID", "CourseTitle"), htmlAttributes: new { @class = "form-control", id = "course" })
                        </div>
                    </div>

                    @*Select Student*@
                    <div class="form-group form-row mt-3 mb-1">
                        <label for="inputState" class="ml-2">Student:</label>
                        @*<select id="inputState" class="form-control">
                                <option selected>Select Student</option>
                                <option>...</option>
                            </select>*@
                        <div class="col-md-12">
                            @Html.DropDownListFor(x => Model.Student, new SelectList(ViewBag.Students, "ID", "RegNo"), htmlAttributes: new { @class = "form-control", id = "course" })
                        </div>

                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.Internal, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Internal, new { htmlAttributes = new { @class = "form-control", @min = "0", @max = "40", placeholder = "Enter Internal Marsk" } })
                            @Html.ValidationMessageFor(model => model.Internal, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.External, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.External, new { htmlAttributes = new { @class = "form-control", @min = "0", @max = "60", placeholder = "Enter External Marks" } })
                            @Html.ValidationMessageFor(model => model.External, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*<div class="form-group">
                            @Html.LabelFor(model => model.Result.Grade, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Result.Grade, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Result.Grade, "", new { @class = "text-danger" })
                            </div>
                        </div>*@

                    <!--Buttons-->

                    <div class="form-actions  mt-5">
                        <button type="submit" value="Create" class="btn btn-success mr-5">
                            <strong>Create</strong>
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-backspace"></i>
                            <span>
                                <strong>Back to List</strong>
                            </span>
                        </a>
                    </div>



                    @*<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>*@
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

